# 資料庫（Docker）
DATABASE_URL=postgresql+asyncpg://aichatbot:aichatbot_password@localhost:5432/aichatbot_admin
SYNC_DATABASE_URL=postgresql://aichatbot:aichatbot_password@localhost:5432/aichatbot_admin

# OpenAI（必須填寫你的 API Key）
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=

# 向量資料庫（使用 pgvector）
VECTOR_DIMENSION=3072

# Redis
REDIS_URL=redis://localhost:6379/0

# 應用設定
APP_NAME=AIChatbot Admin
APP_VERSION=1.0.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 安全（請修改為隨機字串）
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 檔案儲存
KNOWLEDGE_BASE_PATH=../knowledge-base
UPLOAD_DIR=./uploads

# 處理設定
BATCH_SIZE=10
MAX_CONCURRENT_JOBS=3
PROCESSING_TIMEOUT=300

# AI 設定
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072
CHAT_MODEL=gpt-4-turbo-preview
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
